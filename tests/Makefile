# A sample Makefile for building Google Test and using it in user
# tests.  Please tweak it to suit your environment and project.  You
# may want to move it to your project's root directory.
#
# SYNOPSIS:
#
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

# Please tweak the following variable definitions as needed by your
# project, except GTEST_HEADERS, which you can use in your own targets
# but shouldn't modify.

# Points to the root of Google Test, relative to where this file is.
# Remember to tweak this if you move this file.
GTEST_DIR = /Users/bicer/Projects/gtest-1.7.0/

# Where to find user code.
USER_DIR = ./

# Flags passed to the preprocessor.
# Set Google Test's header directory as a system directory, such that
# the compiler doesn't generate warnings in Google Test headers.
CPPFLAGS += -isystem $(GTEST_DIR)/include

# Flags passed to the C++ compiler.
CXXFLAGS += -std=c++11 -g -O0 -Wall -Wextra #-pthread
CXX = clang++

# All tests produced by this Makefile.  Remember to add new tests you
# created to the list.
TESTS = data_region_tests data_region_2d_tests \
				reduction_space_sum_test \
				data_region_2d_main data_region_main \
				disp_engine_tests disp_engine_mpi_main

# House-keeping build targets.
all : $(TESTS)

GTEST_INCLUDES = 
GTEST_LIBS = -lgtest -lgtest_main

INCLUDES = 	-I/Users/bicer/Projects/DISP/src/core/ \
						-I/Users/bicer/Projects/DISP/src/io/
LIBS = -lpthread -lmpi

disp_engine_mpi_main.o : $(USER_DIR)/disp_engine_mpi_main.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${GTEST_INCLUDES} -c $(USER_DIR)/disp_engine_mpi_main.cc
disp_engine_mpi_main : disp_engine_mpi_main.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${LIBS} ${GTEST_LIBS} $^ -o $@

disp_engine_tests.o : $(USER_DIR)/disp_engine_tests.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${GTEST_INCLUDES} -c $(USER_DIR)/disp_engine_tests.cc
disp_engine_tests : disp_engine_tests.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${LIBS} ${GTEST_LIBS} $^ -o $@

reduction_space_sum_test.o : $(USER_DIR)/reduction_space_sum_test.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${GTEST_INCLUDES} -c $(USER_DIR)/reduction_space_sum_test.cc
reduction_space_sum_test : reduction_space_sum_test.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${LIBS} ${GTEST_LIBS} $^ -o $@

data_region_tests.o : $(USER_DIR)/data_region_tests.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${GTEST_INCLUDES} -c $(USER_DIR)/data_region_tests.cc
data_region_tests : data_region_tests.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${LIBS} ${GTEST_LIBS} $^ -o $@

data_region_2d_tests.o : $(USER_DIR)/data_region_2d_tests.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${GTEST_INCLUDES} -c $(USER_DIR)/data_region_2d_tests.cc
data_region_2d_tests : data_region_2d_tests.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${LIBS} ${GTEST_LIBS} $^ -o $@

data_region_main.o : $(USER_DIR)/data_region_main.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${GTEST_INCLUDES} -c $(USER_DIR)/data_region_main.cc
data_region_main : data_region_main.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${LIBS} ${GTEST_LIBS} $^ -o $@

data_region_2d_main.o : $(USER_DIR)/data_region_2d_main.cc
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${GTEST_INCLUDES} -c $(USER_DIR)/data_region_2d_main.cc
data_region_2d_main : data_region_2d_main.o
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(INCLUDES) ${LIBS} ${GTEST_LIBS} $^ -o $@


clean :
	rm $(TESTS) *.o
